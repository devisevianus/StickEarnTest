<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:clickable="true"
    android:focusable="true"
    android:elevation="60dp"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reposDate"
            android:text="Repos Date"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/reposTitle"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reposTitle"
            android:text="Name"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="18dp"
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold"
            android:layout_alignParentTop="true" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/branchIcon"
            android:src="@drawable/watchers"
            android:layout_alignStart="@+id/reposDate"
            android:layout_alignTop="@+id/reposDate"
            android:layout_marginLeft="200dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/branchIcon"
            android:layout_marginLeft="20dp"
            android:layout_alignTop="@+id/reposDate"
            android:textSize="14sp"
            android:text="0"
            android:id="@+id/reposWatchers" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/forkIcon"
            android:src="@drawable/fork"
            android:layout_alignStart="@+id/reposWatchers"
            android:layout_alignTop="@+id/reposDate"
            android:layout_marginLeft="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/forkIcon"
            android:layout_marginLeft="20dp"
            android:layout_alignTop="@+id/reposDate"
            android:textSize="14sp"
            android:text="0"
            android:id="@+id/reposFork" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/starIcon"
            android:src="@drawable/star"
            android:layout_alignStart="@+id/forkIcon"
            android:layout_alignTop="@+id/reposTitle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/starIcon"
            android:layout_marginLeft="20dp"
            android:layout_alignTop="@+id/reposTitle"
            android:textSize="14sp"
            android:text="0"
            android:id="@+id/repoStar" />
    </RelativeLayout>
</android.support.v7.widget.CardView>